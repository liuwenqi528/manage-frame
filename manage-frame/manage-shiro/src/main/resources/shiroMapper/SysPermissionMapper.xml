<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huitu.mp.shiro.mapper.SysPermissionMapper">

    <!-- 开启二级缓存 -->
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <select id="selectPermByUser" parameterType="com.huitu.mp.shiro.entity.UserInfo" resultType="com.huitu.mp.shiro.entity.SysPermission">
        SELECT
            sp.*
        FROM
            sys_role_permission srp
            LEFT JOIN sys_permission sp ON srp.permission_id = sp.id
        WHERE
            srp.role_id IN (
                SELECT
                    role_id
                FROM
                    sys_user_role sur
                    LEFT JOIN sys_role sr ON sur.role_id = sr.id
                WHERE
                    sur.uid = #{uid}
            )
    </select>

</mapper>
